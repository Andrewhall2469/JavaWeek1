import java.util.ArrayList;

public class garage {
	static ArrayList<vehicle> vehicleArray = new ArrayList<vehicle>();
	
	
public static void calculateBill() {
	
	for (vehicle v : vehicleArray) {
		
		System.out.println("Cost of "+ v.type + " " + v.id + ": £" + v.bill());
		System.out.println("---------------------------");
		
		}
	
}

public static void addVehicle(vehicle v) {
	vehicleArray.add(v);
}

public static void removeVehicle(vehicle v) {
	
}

public static void closeGarageDown(vehicle v) {
	vehicleArray.clear();
	System.out.println("Sorry the garage has closed down.. you can go now");
}


}
