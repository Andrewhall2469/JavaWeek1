import java.util.ArrayList;

import java.util.Scanner;

public class garage {
	static ArrayList<vehicle> vehicleArray = new ArrayList<vehicle>();
	
	
public static void calculateBill() {
	
	for (vehicle v : vehicleArray) {
		
		System.out.print("Cost of " + v.type + ": £");
		System.out.println(((vehicle) v).bill());
		System.out.println("---------------------------");
		
		}
	
}

public static void addQuestions() {
	
	for (vehicle v : vehicleArray) {
		Scanner input2 = new Scanner(System.in);
		System.out.println("How many wheels does the vehicle have?");
		v.numberOfWheels = input2.nextInt();
		
		System.out.println("Is the vehicle motorised? Enter true or false");
		v.motorised = input2.nextBoolean();
		
		System.out.println("What colour is the vehicle?");
		v.colour = input2.next();
		
		System.out.println("What is the make and model of the vehicle?");
		v.colour = input2.next();
		
		System.out.println("What is the Vin number of the vehicle??");
		v.vinNo = input2.next();
	}
	
	
}

