import java.util.Scanner;

public class Adventure {

	public static void main(String[] args) {

		int[][] twoD = new int[9][9];
		
		Treasure t = new Treasure();
		
		Player p = new Player();
		
		p.setX(4);
		p.setY(4);

		t.setX(4);
		t.setY(4);
		
		//int playerPosX = 4;
		
		int treasurePosX = 7;
		int treasurePosY = 7;
		
		
		
//		int playerPosY = 4;
		twoD[p.x][p.y] = 9;
		twoD[t.x][t.y] = 1;

		outputGrid(twoD);
		
		String input = "";
		Scanner scanner = new Scanner(System.in);
		System.out.println("Hello and welcome to the worst game of your life! Press <ENTER> to continue");
		System.out.println("You wake up find yourself stranded in the middle of the ocean\n"
				+ "There is no sign of life for miles\n" + "Luckily your Michael Phelps on steroids\n"
				+ "You notice attached to your wrist is a small watch-like device\n"
				+ "But it only seems to read numbers\n"
				+ "------------------------------------------------------------------------\n"
				+ "The watch reads 5 miles to destination\n");

		int check = 0;
		while(check == 0) {
			
			System.out.println(p.x-t.x);
			
			System.out.println("Enter north, south, east or west to move");
			input = scanner.nextLine();
		if (input.equals("north")) {
			p.x--;
			twoD[p.x][p.y] = 9;
			twoD[p.x+1][p.y] = 0;
			
					outputGrid(twoD);			
		}
		else if (input.equals("south")) {
			p.x++;
			twoD[p.x][p.y] = 9;
			twoD[p.x-1][p.y] = 0;
			
				 outputGrid(twoD);			
		}
		else if (input.equals("east")) {
			p.y++;
			twoD[p.x][p.y] = 9;
			twoD[p.x][p.y-1] = 0;
			
				 outputGrid(twoD);			
		}
		else if (input.equals("west")) {
			p.y--;
			twoD[p.x][p.y] = 9;
			twoD[p.x][p.y+1] = 0;
			
				 outputGrid(twoD);			
		}
		
		if ((p.x == treasurePosX) && (p.y == treasurePosY)) {
			check = 1;
			System.out.println("Congratulations, you're a regular olympian");
		}
			}	

	}
	
	public static void outputGrid(int[][] grid) {
		for (int i = 0; i < 9; i++) {
			for (int j = 0; j < 9; j++) {
				System.out.print(grid[i][j] + " ");
			}
			System.out.println();
		}
	}

}
